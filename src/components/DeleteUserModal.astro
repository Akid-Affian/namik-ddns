<div
    id="deleteUserModal"
    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 invisible opacity-0 transition-opacity duration-300"
>
    <div class="bg-[#2C3333] rounded-lg shadow-lg p-8 max-w-lg w-full">
        <h2 id="modalTitle" class="text-xl font-semibold mb-4 text-gray-100">
            Delete User
        </h2>

        <!-- Hidden input to prevent autocomplete -->
        <input type="text" name="prevent_autofill" id="prevent_autofill" style="display:none;" autocomplete="off">

        <label class="block mb-4 text-gray-100">
            Username to delete:
            <input
                type="text"
                id="modalUsernameToDeleteInput"
                class="w-full px-3 py-2 border rounded mt-2 text-black"
                placeholder="Enter username"
                autocomplete="off"
            />
        </label>

        <p class="text-red-500 mb-4">
            Warning: Deleting this user will also delete their domain and DNS records. This action cannot be undone.
        </p>

        <p class="text-gray-100 mb-4">
            Are you sure you want to delete this user?
        </p>

        <div class="flex justify-end">
            <button
                id="confirmDeleteUserButton"
                class="bg-red-600 hover:bg-red-500 text-white px-4 py-2 rounded mr-2"
            >
                Confirm
            </button>
            <button
                id="cancelDeleteUserButton"
                class="bg-gray-600 text-white px-4 py-2 rounded"
            >
                Cancel
            </button>
        </div>
    </div>
</div>

<script>
    import {
        initDeleteUserModalFunctionality,
        cleanUpDeleteUserModalFunctionality,
    } from "../scripts/delete-user-modal/deleteUserModalEventHandlers";

    document.addEventListener(
        "astro:before-swap",
        cleanUpDeleteUserModalFunctionality,
    );
    document.addEventListener("astro:page-load", initDeleteUserModalFunctionality);
    document.addEventListener(
        "astro:after-swap",
        initDeleteUserModalFunctionality,
    );
</script>
