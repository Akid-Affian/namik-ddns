<div
    id="modifyUserRoleModal"
    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 invisible opacity-0 transition-opacity duration-300"
>
    <div class="bg-[#2C3333] rounded-lg shadow-lg p-8 max-w-lg w-full">
        <h2 id="modalTitle" class="text-xl font-semibold mb-4 text-gray-100">
            Modify User Role
        </h2>

        <label class="block mb-4 text-gray-100">
            Username:
            <input
                type="text"
                id="modifyModalUsernameInput"
                class="w-full px-3 py-2 border rounded mt-2 text-black"
                placeholder="Enter username"
                autocomplete="off"
            />
        </label>

        <label class="block mb-4 text-gray-100">
            Select new role:
            <select
                id="modifyModalRoleSelect"
                class="w-full px-3 py-2 border rounded mt-2 text-black"
            >
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
        </label>

        <div class="flex justify-end">
            <button
                id="confirmModifyUserRoleButton"
                class="bg-blue-600 hover:bg-blue-800 text-white px-4 py-2 rounded mr-2"
            >
                Confirm
            </button>
            <button
                id="cancelModifyUserRoleButton"
                class="bg-gray-600 text-white px-4 py-2 rounded"
            >
                Cancel
            </button>
        </div>
    </div>
</div>


<script>
    import {
        initModifyUserRoleModalFunctionality,
        cleanUpModifyUserRoleModalFunctionality,
    } from "../scripts/modify-user-role-modal/modifyUserRoleModalEventHandlers";

    document.addEventListener("astro:page-load", initModifyUserRoleModalFunctionality);
    document.addEventListener("astro:before-swap", cleanUpModifyUserRoleModalFunctionality);
    document.addEventListener("astro:after-swap", initModifyUserRoleModalFunctionality);
</script>



